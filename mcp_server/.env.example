# Development Assistant MCP Server - Environment Configuration

# Server Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database Configuration
REDIS_URL=redis://localhost:6379
POSTGRES_URL=postgresql://user:password@localhost:5432/devassistant

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Tool Configuration
TOOLS_CONFIG_PATH=tools.json
MAX_CODEBASE_SIZE_MB=1000
MAX_QUERY_LENGTH=10000

# Subscription Limits
FREE_TIER_QUERIES=100
PRO_TIER_QUERIES=1000
ENTERPRISE_TIER_QUERIES=-1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mcp-server.log

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
